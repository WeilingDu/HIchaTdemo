<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/left_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/head"
        android:contentDescription="TODO" />

    <LinearLayout
        android:id="@+id/left_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/right_head"
        android:layout_toEndOf="@+id/left_head">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left">

            <TextView
                android:id="@+id/left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/left_read"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/left_ll"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/left_ll"
        android:background="@drawable/read" />


    <ImageView
        android:id="@+id/right_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/left_ll"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/head" />

    <LinearLayout
        android:id="@+id/right_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_ll"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/right_head"
        android:layout_toRightOf="@+id/left_head"
        android:layout_toEndOf="@+id/left_read">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:textColor="#fefefe"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/right_read"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/right_ll"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@id/right_ll"
        android:background="@drawable/read" />

</RelativeLayout>